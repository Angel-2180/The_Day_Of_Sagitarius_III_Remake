    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Godot Server",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "E:/Godot_v4.1.2-stable_mono_win64/Godot_v4.1.2-stable_mono_win64.exe",
        "cwd": "${workspaceFolder}",
        "console": "internalConsole",
        "stopAtEntry": false,
        "args": [
          "--path",
          "${workspaceRoot}",
          "--server"  // Add any server-specific arguments here
        ]
      },
      {
        "name": "Run Godot Client",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "E:/Godot_v4.1.2-stable_mono_win64/Godot_v4.1.2-stable_mono_win64.exe",
        "cwd": "${workspaceFolder}",
        "console": "internalConsole",
        "stopAtEntry": false,
        "args": [
          "--path",
          "${workspaceRoot}",
          "--client"  // Add any client-specific arguments here
        ]
      }
    ],
    "compounds": [
      {
        "name": "Godot Server/Client",
        "configurations": ["Run Godot Server", "Run Godot Client"],
        "preLaunchTask": "build",
        "stopAll": true
      }
    ]
}